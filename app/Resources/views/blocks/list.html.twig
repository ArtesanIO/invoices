{% extends 'blocks.html.twig' %}

{% block content %}
  <div class="panel panel-default panel-body">
    {% import 'AppBundle::Components/buttons.html.twig' as buttons %}
    <div class="table-responsive">
    <table class="table table-condensed">
      <thead>
        <tr>
          <th>{{ 'sections.blocks.titles.block'|trans }}</th>
          <th nowrap="">{{ 'sections.blocks.titles.own'|trans }}</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        {% for block in blocks %}
        <tr>
          <td>{{ block.block }}</td>
          <td>{{ block.own }}</td>
          <td class="text-right">
            {{ buttons.action('actions.edit'|trans, { 'path': 'records', 'args': { 'block': block.id } }) }}
          </td>
        </tr>
        {% endfor %}
      </tbody>
    </table>
    </div>
  </div>
{% endblock %}
