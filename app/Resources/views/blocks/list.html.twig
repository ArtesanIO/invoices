{% extends 'blocks.html.twig' %}

{% block content %}
  <div class="panel panel-default panel-body">
    {% import 'AppBundle::Components/buttons.html.twig' as buttons %}
    <table class="table table-condensed">
      <thead>
        <tr>
          <th>#</th>
          <th>{{ 'sections.blocks.titles.block'|trans }}</th>
          <th>{{ 'sections.blocks.titles.currencys'|trans }}</th>
        </tr>
      </thead>
      <tbody>
        {% for block in blocks %}
        <tr>
          <td>{{ block.id }}</td>
          <td>{{ block.block }}</td>
          <td>{{ block.currencys.currency }}</td>
          <td>{{ block.recordsTotal }}</td>
          <td class="text-right">
            {{ buttons.action('actions.edit'|trans, { 'path': 'records', 'args': { 'block': block.sluger } }) }}
          </td>
        </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
{% endblock %}
